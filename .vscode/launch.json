{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run Odin Binary",
            "program": "${workspaceFolder}/main.bin",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Any Binary",
            "program": "${input:binaryPath}",
            "args": "${input:programArgs}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        }
    ],
    "inputs": [
        {
            "id": "binaryPath",
            "description": "Path to binary to debug",
            "default": "${workspaceFolder}/",
            "type": "promptString"
        },
        {
            "id": "programArgs",
            "description": "Program arguments (space separated)",
            "default": "",
            "type": "promptString"
        }
    ]
}
